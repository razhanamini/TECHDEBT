{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",      // <-- This tells tsc to put compiled JS here
    "rootDir": "src",      // <-- Your TypeScript source folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]   
}
